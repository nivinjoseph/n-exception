{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "inlineSources": true,
        "outDir": ".",
        "declaration": true,
        "declarationDir": "."
    },
    "include": [
        "../src/**/*.ts"
    ]
}